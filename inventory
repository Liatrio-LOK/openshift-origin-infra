# Create an OSEv3 group that contains the masters and nodes groups
[OSEv3:children]
masters
nodes
glusterfs

# Set variables common for all OSEv3 hosts
[OSEv3:vars]

# SSH user, this user should allow ssh based auth without requiring a password
ansible_ssh_user=centos
# If ansible_ssh_user is not root, ansible_become must be set to true
ansible_become=true

# Cluster
openshift_deployment_type=origin
openshift_release=3.6.1

# API/Console
openshift_master_cluster_public_hostname=master.os-sandbox.liatr.io
openshift_master_console_port=8443
openshift_master_api_port=8443

# Identity - Replace with your own GitHub creds!!
openshift_master_identity_providers=[{'name': 'github', 'login': 'true', 'challenge': 'false', 'kind': 'GitHubIdentityProvider', 'clientID': '*****', 'clientSecret': '*********', 'organizations': ['liatrio']}]

# host group for masters
[masters]
master.os-sandbox.liatr.io

# host group for etcd
[etcd]
master.os-sandbox.liatr.io

# host group for nodes, includes region info
[nodes]
master.os-sandbox.liatr.io openshift_node_labels="{'region': 'infra','zone': 'default'}" openshift_schedulable=true
node0.os-sandbox.liatr.io
node1.os-sandbox.liatr.io

[glusterfs]
master.os-sandbox.liatr.io glusterfs_devices='[ "/dev/xvdg" ]'
node0.os-sandbox.liatr.io  glusterfs_devices='[ "/dev/xvdg" ]'
node1.os-sandbox.liatr.io  glusterfs_devices='[ "/dev/xvdg" ]'

